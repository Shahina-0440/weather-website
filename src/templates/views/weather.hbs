<script>
    const day=document.getElementById('day');
    const today_date=document.getElementById('today_date')
    const getCurrentDay=() =>{
            var weekday=new Array(7); //creating object for Array()
            weekday[0]="Sun";
            weekday[1]="Mon";
            weekday[2]="Tue";
            weekday[3]="Wed";
            weekday[4]="Thu";
            weekday[5]="Fri";
            weekday[6]="Sat";


            let currentTime= new Date();//creating object for Date() class
            let d=weekday[currentTime.getDay()] //getDay is inbuilt function for Day 
            day.innerText=d;

        };
    getCurrentDay();

